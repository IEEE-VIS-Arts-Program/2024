<!DOCTYPE html>
<html lang="en">
<head>
{% include "meta.njk" %}<title>{{title}}</title>
<title>{{title}}</title>
<link rel="stylesheet" href="{{ '/styles/bundle.css' | url}}">
</head>
<body class="has-navbar-fixed-top">
{% include "navbar.njk" %}
<section class="section">
  <div class="column is-8 is-offset-2">
    <div class="content">
        <h2 class="title">{{ title}}</h2>
        <h3 class="title">Artworks</h3>
      {{ content | safe }}
        <div class="card-group">
        {%  set sortedContributors = collections.contribution | sortContributions %}
        {% for post in sortedContributors %}
          {% if post.data.type == "artwork" %}
            <a class="card" href="{{ post.url | url }}">
              {% if post.data.thumb %}
                <img src="{{ post.data.thumb | url }}" alt="{{ post.data.title }}">
              {% endif %}
                <p>{{ post.data.title }}</p>
            </a>
          {% endif %}
        {% endfor %}
        </div>
    </div>
  </div>  
  <div class="column is-8 is-offset-2">
    <div class="content">
        <h3 class="title">Papers</h3>
        <div class="card-group">
          {% for post in sortedContributors %}
            {% if post.data.type == "paper" %}
            <a class="card" href="{{ post.url | url }}">
              {% if post.data.thumb %}
                <img src="{{ post.data.thumb | url }}" alt="{{ post.data.title }}">
              {% endif %}
                <p>{{ post.data.title }}</p>
            </a>
            {% endif %}
          {% endfor %}
        </div>
    </div>
  </div>  
  <div class="column is-8 is-offset-2">
    <div class="content">
        <h3 class="title">Pictorials</h3>
          <div class="card-group">
          {% for post in sortedContributors %}
            {% if post.data.type == "pictorial" %}
            <a class="card" href="{{ post.url | url }}">
              {% if post.data.thumb %}
                <img src="{{ post.data.thumb | url }}" alt="{{ post.data.title }}">
              {% endif %}
                <p>{{ post.data.title }}</p>
            </a>
            {% endif %}
          {% endfor %}
        </div>
    </div>
  </div>  
</section>
{% include "footer.njk" %}
<script src="{{ '/scripts/scripts.js' | url }}"></script>
</body>
</html>